    HomeScreen:

<SplashScreen>:
    name: "splash"
    BoxLayout:
        orientation: "vertical"
        padding: dp(24)
        spacing: dp(12)
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        Widget:
        Image:
            source: "assets/icon.png"
            size_hint: None, None
            size: dp(120), dp(120)
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"center_x": .5}
        Label:
            text: "Dr. Jorhniee Weda üå°Ô∏èüå§Ô∏è"
            font_size: "22sp"
            halign: "center"
            valign: "middle"
            size_hint_y: None
            height: self.texture_size[1] + dp(8)
        Widget:

<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(8)
            Label:
                text: "üå§Ô∏è  3‚ÄëDay Forecast"
                font_size: "18sp"
